# =============================================================================
# Kenny Andries - Apache Configuration
# =============================================================================
#
# This file configures:
# - Clean URLs (removes .html extension)
# - Custom 404 error page
# - Gzip compression
# - Browser caching
# - Security headers
#
# =============================================================================

# -----------------------------------------------------------------------------
# Basic Settings
# -----------------------------------------------------------------------------

# Default document for directory requests
DirectoryIndex index.html

# Custom 404 error page
ErrorDocument 404 /404.html

# -----------------------------------------------------------------------------
# URL Rewriting (Clean URLs)
# -----------------------------------------------------------------------------
#
# Pages use directory-based routing (about/index.html served as /about/).
# The rewrite below only handles legacy .html URLs for SEO.
#

RewriteEngine On

# Redirect old .html URLs to clean URLs (301 permanent redirect for SEO)
# Example: /about.html -> /about
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.html\sHTTP [NC]
RewriteRule ^ %1 [R=301,L]

# -----------------------------------------------------------------------------
# Performance: Compression
# -----------------------------------------------------------------------------
#
# Enables gzip compression for text-based files
# Reduces bandwidth by 60-70% for supported browsers
#

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json image/svg+xml
</IfModule>

# -----------------------------------------------------------------------------
# Performance: Browser Caching
# -----------------------------------------------------------------------------
#
# Sets cache expiration headers to reduce repeat downloads
# - Images: 1 month (they rarely change)
# - CSS/JS: 1 week (update periodically)
# - HTML: 1 hour (may change frequently)
#

<IfModule mod_expires.c>
    ExpiresActive On

    # Images - cache for 1 month
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"

    # CSS and JavaScript - cache for 1 week
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"

    # HTML - cache for 1 hour
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# -----------------------------------------------------------------------------
# Security Headers
# -----------------------------------------------------------------------------
#
# X-Content-Type-Options: Prevents MIME type sniffing
# X-Frame-Options: Prevents clickjacking by disabling iframes
# Referrer-Policy: Controls referrer information sent with requests
#

<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header set Permissions-Policy "accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()"
    Header set Content-Security-Policy "default-src 'self'; img-src 'self'; style-src 'self'; script-src 'self'; font-src 'self'; object-src 'none'; base-uri 'self'; form-action 'self';"
</IfModule>
